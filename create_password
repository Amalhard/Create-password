def enter_password(): # Defines the function no parameter needed

    create_password = (input('create a unique password using digits and numbers: ')) # Creates a password variable
    confirm_password = (input('please confirm password: ')) # Double checks the spelling
    while create_password != confirm_password: # Loop to make sure passwords match
        print('Incorrect please retype carefully')
        create_password = (input('create a unique password using digits and numbers: '))
        confirm_password = (input('please confirm password: ')) # Repeats the code until passwords match

    print('Password confirmed') # Loop is broken

    return create_password # when function is called will return the value of the create_password
new_password = enter_password() # variable used to call the function and recieve the creat_password value
print('Your new password is:', new_password) # prints your new password
